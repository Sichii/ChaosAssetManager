<UserControl x:Class="ChaosAssetManager.Controls.MapEditorControls.StructurePickerEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:ChaosAssetManager.ViewModel"
             mc:Ignorable="d"
             d:DesignWidth="224"
             MinHeight="54"
             d:DesignHeight="54"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             FontFamily="{materialDesign:MaterialDesignFont}"
             d:DataContext="{d:DesignInstance viewModel:TileViewModel}"
             Padding="0"
             Margin="0"
             DataContextChanged="StructurePickerEntryControl_OnDataContextChanged">
    <Grid>
        <ContentControl x:Name="ContentControl"
                        Padding="0"
                        Margin="0" />
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="4">
            <Button x:Name="EditBtn"
                    Width="24"
                    Height="24"
                    Padding="0"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="{materialDesign:PackIcon Kind=Pencil, Size=16}"
                    ToolTip="Edit Structure"
                    Click="EditBtn_OnClick" />
            <Button x:Name="DeleteBtn"
                    Width="24"
                    Height="24"
                    Padding="0"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="{materialDesign:PackIcon Kind=Delete, Size=16}"
                    ToolTip="Delete Structure"
                    Click="DeleteBtn_OnClick" />
        </StackPanel>
    </Grid>
</UserControl>